<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="clickHandler"
            type="com.ajib.cbt.ui.fragments.createAccount.GetStartedFragment.ClickHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color">


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gStartOuter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gEndOuter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/dp50"
                android:clipToPadding="false"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTitle"
                    android:textAppearance="@style/CitoTextAppearance.Basic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:gravity="center"
                    android:text="@string/get_started_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <LinearLayout
                    android:id="@+id/lTerms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/dp10"
                    app:layout_constraintTop_toBottomOf="@id/tvTitle">

                    <TextView
                        android:textAppearance="@style/CitoTextAppearance.Basic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:gravity="center"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="@string/terms_text"
                       />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginHorizontal="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp10"
                        android:background="@color/greyColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp10"
                        android:paddingVertical="@dimen/dp13"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp24"
                            android:layout_height="@dimen/dp24"
                            android:src="@drawable/ic_baseline_check_circle_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            style="@style/CitoTextAppearance.Basic"
                            android:text="@string/you_have_a_jordanion_national_id"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginHorizontal="@dimen/dp10"
                        android:background="@color/greyColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp10"
                        android:paddingVertical="@dimen/dp13"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp24"
                            android:layout_height="@dimen/dp24"
                            android:src="@drawable/ic_baseline_check_circle_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            style="@style/CitoTextAppearance.Basic"
                            android:text="You have an active mobile number"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginHorizontal="@dimen/dp10"
                        android:background="@color/greyColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp10"
                        android:paddingVertical="@dimen/dp13"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp24"
                            android:layout_height="@dimen/dp24"
                            android:src="@drawable/ic_baseline_check_circle_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            style="@style/CitoTextAppearance.Basic"
                            android:text="You are over 18 years old"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginHorizontal="@dimen/dp10"
                        android:background="@color/greyColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp10"
                        android:paddingVertical="@dimen/dp13"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp24"
                            android:layout_height="@dimen/dp24"
                            android:src="@drawable/ic_baseline_check_circle_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            style="@style/CitoTextAppearance.Basic"
                            android:text="You are beneficial owner of this account"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginHorizontal="@dimen/dp10"
                        android:background="@color/greyColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp10"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/dp13">

                        <ImageView
                            android:layout_width="@dimen/dp24"
                            android:layout_height="@dimen/dp24"
                            android:src="@drawable/ic_baseline_check_circle_24" />

                        <TextView
                            style="@style/CitoTextAppearance.Basic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:text="You are not Politically Exposed Person (PEP), or have a close family member who is a PEP." />
                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_marginStart="@dimen/dp10"
                    android:id="@+id/tvBottom"
                    android:gravity="center"
                    android:layout_marginHorizontal="@dimen/dp50"
                    android:textColor="#aeaeae"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/dp20"
                    app:layout_constraintTop_toBottomOf="@id/lTerms"
                    style="@style/CitoTextAppearance.Basic"
                    android:text="@string/throughout_this_process_your_information_will_be_saved_and_secured_with_aiib"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="0dp"
                    app:layout_constraintTop_toBottomOf="@id/tvBottom"
                    android:layout_marginTop="@dimen/dp30"
                    android:text="@string/get_started"
                    style="@style/ButtonStyle"
                    android:layout_marginHorizontal="@dimen/dp15"
                    android:onClick="@{()->clickHandler.onClickNext()}"
                    app:layout_constraintStart_toStartOf="@id/lTerms"
                    app:layout_constraintEnd_toEndOf="@id/lTerms"
                    android:layout_height="@dimen/button_size" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
